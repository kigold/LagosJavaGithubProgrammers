<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

    <ImageView
        android:id="@+id/title_profile_pics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxWidth="70dp"
        android:maxHeight="70dp"
        android:minHeight="116dp"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/title_username"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large_text"
        android:layout_alignBottom="@+id/title_profile_pics"
        android:layout_toRightOf="@+id/title_profile_pics"
        android:layout_toEndOf="@+id/title_profile_pics"/>
</RelativeLayout>
